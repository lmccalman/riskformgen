{# Save/load button bar â€” include with export_fn, import_fn, file_label set #}
<div class="save-load-bar">
  <button type="button" class="button is-primary is-small" @click="{{ export_fn }}()">Save {{ file_label }}</button>
  <button type="button" class="button is-light is-small" @click="$refs.{{ import_ref }}.click()">
    Load {{ file_label }}
  </button>
  <input
    type="file"
    accept=".json"
    x-ref="{{ import_ref }}"
    @change="{{ import_fn }}($event)"
    hidden
  />
</div>
