<fieldset>
  <legend>{{ question.text }}</legend>
  {% if question.guidance %}
  <p><small><em>{{ question.guidance }}</em></small></p>
  {% endif %}
  <div class="options-row">
    <label>
      <input
        type="radio"
        name="{{ question.id }}"
        value="yes"
        x-model="answers.{{ question.id }}"
      />
      Yes
    </label>
    <label>
      <input
        type="radio"
        name="{{ question.id }}"
        value="no"
        x-model="answers.{{ question.id }}"
      />
      No
    </label>
  </div>
</fieldset>
