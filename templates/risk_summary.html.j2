<div class="rounded-lg border border-gray-200 bg-white p-5 shadow-sm">
  <div class="flex items-start justify-between">
    <div>
      <h3 class="text-base font-semibold text-gray-900">{{ risk.name }}</h3>
      <p class="mt-1 text-sm text-gray-500">{{ risk.description }}</p>
    </div>
    <span
      class="ml-4 inline-flex shrink-0 items-center rounded-full px-2.5 py-0.5 text-xs font-medium"
      :class="{
        'bg-gray-100 text-gray-600': {{ risk.id }} === 'not_applicable',
        'bg-green-100 text-green-700': {{ risk.id }} === 'low',
        'bg-amber-100 text-amber-700': {{ risk.id }} === 'medium',
        'bg-red-100 text-red-700': {{ risk.id }} === 'high',
      }"
      x-text="{{ risk.id }}.replace('_', ' ')"
    ></span>
  </div>
</div>
