<div class="rounded-lg border border-gray-200 bg-white p-5 shadow-sm space-y-4">
  {# ── Header ── #}
  <div>
    <h3 class="text-base font-semibold text-gray-900">{{ risk.name }}</h3>
    <p class="mt-1 text-sm text-gray-500">{{ risk.description }}</p>
  </div>

  {# ── Modelled risk: likelihood × consequence → level ── #}
  <div class="grid grid-cols-3 gap-4">
    {# Likelihood #}
    <div>
      <span class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-1">Likelihood</span>
      <span
        class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-700"
        x-text="{{ risk.id }}.likelihood.replace(/_/g, ' ')"
      ></span>
    </div>

    {# Consequence #}
    <div>
      <span class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-1">Consequence</span>
      <span
        class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-700"
        x-text="{{ risk.id }}.consequence.replace(/_/g, ' ')"
      ></span>
    </div>

    {# Modelled risk level (colour-coded) #}
    <div>
      <span class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-1">Modelled Risk</span>
      <span
        class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium"
        :class="{
          'bg-gray-100 text-gray-600': {{ risk.id }}.level === 'not_applicable',
          'bg-green-100 text-green-700': {{ risk.id }}.level === 'low',
          'bg-amber-100 text-amber-700': {{ risk.id }}.level === 'medium',
          'bg-red-100 text-red-700': {{ risk.id }}.level === 'high',
        }"
        x-text="{{ risk.id }}.level.replace(/_/g, ' ')"
      ></span>
    </div>
  </div>

  {# ── Controls ── #}
  {% if risk.controls %}
  <div>
    <span class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-2">Controls</span>
    <div class="space-y-1">
      {% for ctrl in risk.controls %}
      <div class="flex items-center gap-2 text-sm">
        <span
          class="inline-flex h-5 w-5 shrink-0 items-center justify-center rounded-full text-xs font-bold"
          :class="ctrl_{{ ctrl.id }}
            ? 'bg-green-100 text-green-600'
            : 'bg-gray-100 text-gray-400'"
          x-text="ctrl_{{ ctrl.id }} ? '✓' : '✗'"
        ></span>
        <span
          :class="ctrl_{{ ctrl.id }} ? 'text-gray-900' : 'text-gray-400'"
          >{{ ctrl.name }}</span>
        <span class="ml-auto text-xs text-gray-400">
          {% if ctrl.reduces_likelihood and ctrl.reduces_consequence %}↓ Likelihood &amp; Consequence
          {% elif ctrl.reduces_likelihood %}↓ Likelihood
          {% else %}↓ Consequence
          {% endif %}
        </span>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {# ── Assessed risk (user-selected) ── #}
  <div>
    <span class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-1">Assessed Risk</span>
    <div class="flex items-center gap-2">
      <select
        x-model="assessed_risks.{{ risk.id }}"
        class="rounded-md border border-gray-300 bg-white px-2 py-1 text-sm text-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500"
      >
        <option value="">— Select —</option>
        {% for level in risk_levels %}
        <option value="{{ level }}">{{ level | replace("_", " ") | title }}</option>
        {% endfor %}
      </select>
      <span
        x-show="assessed_risks.{{ risk.id }}"
        x-cloak
        class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium"
        :class="{
          'bg-gray-100 text-gray-600': assessed_risks.{{ risk.id }} === 'not_applicable',
          'bg-green-100 text-green-700': assessed_risks.{{ risk.id }} === 'low',
          'bg-amber-100 text-amber-700': assessed_risks.{{ risk.id }} === 'medium',
          'bg-red-100 text-red-700': assessed_risks.{{ risk.id }} === 'high',
        }"
        x-text="assessed_risks.{{ risk.id }}.replace(/_/g, ' ')"
      ></span>
    </div>
  </div>

  {# ── Justification ── #}
  <div>
    <label
      for="justification_{{ risk.id }}"
      class="block text-xs font-medium uppercase tracking-wide text-gray-400 mb-1"
    >Justification</label>
    <textarea
      id="justification_{{ risk.id }}"
      x-model="justifications.{{ risk.id }}"
      rows="2"
      placeholder="Provide reasoning for the assessed risk level…"
      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500"
    ></textarea>
  </div>

  {# ── Linked answers ── #}
  {% if risk.questions %}
  <hr class="border-gray-100" />
  <ul class="space-y-1">
    {% for q in risk.questions %}
    <li class="flex items-baseline justify-between gap-4 text-sm">
      <span class="text-gray-600">{{ q.text }}</span>
      <span
        class="shrink-0"
        :class="_formatAnswer(answers['{{ q.id }}']) === 'Not answered'
          ? 'italic text-gray-400'
          : 'text-gray-900'"
        x-text="_formatAnswer(answers['{{ q.id }}'])"
      ></span>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
</div>
